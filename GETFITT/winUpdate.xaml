<Window x:Class="GETFITT.winUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GETFITT"
        mc:Ignorable="d"
        Title="winUpdate" Height="350" Width="300">
    <Grid>
        <TextBox x:Name="txtReadme" HorizontalAlignment="Left" Height="206" Margin="10,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270"/>
        <StackPanel HorizontalAlignment="Left" Height="72" Margin="10,239,0,0" VerticalAlignment="Top" Width="270">
            <Button x:Name="btnDownloadUpdate" Content="Download Update" Height="30" FontSize="14" Click="btnDownloadUpdate_Click"></Button>
            <Label Height="10"></Label>
            <Button x:Name="btnClose" Content="Close" Height="25
                    " FontSize="14" Click="btnClose_Click"></Button>
        </StackPanel>
        <Label Content="Current Version: 0.9.2 - beta " HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="270"/>
    </Grid>
</Window>
