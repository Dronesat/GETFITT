<Window x:Class="GETFITT.winHomeExercise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GETFITT"
        mc:Ignorable="d"
        Title="winHomeExercise" Height="650" Width="500">
    <Grid Margin="0,0,-0.4,0">
        <Label x:Name="lblExercise" Content="Exercise" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,10,-0.4,0" VerticalAlignment="Top" Height="53" Width="494" FontSize="24" FontFamily="Arial Rounded MT Bold"/>
        <Label x:Name="lblMovementPattern" Content="MovementPattern" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,63,-0.4,0" VerticalAlignment="Top" FontSize="20" Height="50" Width="494"/>
        <TextBlock x:Name="txtInstruction" HorizontalAlignment="Left" Margin="9,437,0,0" TextWrapping="Wrap" FontSize="18" Width="474" Height="183" VerticalAlignment="Top"><Run Text="Instruction"/><LineBreak/><Run/></TextBlock>
        <Image x:Name="imgImage" HorizontalAlignment="Left" Height="288" Margin="10,118,0,0" VerticalAlignment="Top" Width="474"/>
    </Grid>
</Window>
