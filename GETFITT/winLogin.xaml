<Window x:Class="GETFITT.winLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GETFITT"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="450">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="33,129,0,0" VerticalAlignment="Top" Width="100">
            <Label Content="Username" FontSize="20" Height="38"/>
            <Label Content="Password" FontSize="20" Height="38"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="133,129,0,0" VerticalAlignment="Top" Width="286">
            <TextBox x:Name="txtUsername" Height="38" TextWrapping="Wrap" FontSize="20" Margin="0,0,0.4,0"/>
            <TextBox x:Name="txtPassword" Height="38" TextWrapping="Wrap" FontSize="20"/>
        </StackPanel>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="168,249,0,0" VerticalAlignment="Top" Width="105" Height="44" FontSize="20" Click="btnLogin_Click"/>
    </Grid>
</Window>
