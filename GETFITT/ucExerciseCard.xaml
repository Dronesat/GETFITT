<UserControl x:Class="GETFITT.ucExerciseCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GETFITT"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="380">
    <Grid>
        <Rectangle Fill="#FFECF1B3" HorizontalAlignment="Left" Height="140" Stroke="Black" VerticalAlignment="Top" Width="380"/>
        <Label x:Name="lblExerciseName" Content="Label" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="380" FontFamily="Arial Rounded MT Bold" FontSize="16"/>
        <Label x:Name="lblMovementPattern" Content="Label" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="363"/>
        <Image x:Name="imgImage" HorizontalAlignment="Left" Height="75" Margin="10,55,0,0" VerticalAlignment="Top" Width="217"/>
        <Button x:Name="btnView" Content="View" HorizontalAlignment="Left" Margin="232,69,0,0" VerticalAlignment="Top" Width="141" Click="btnView_Click" Height="26" FontSize="16"/>
    </Grid>
</UserControl>
